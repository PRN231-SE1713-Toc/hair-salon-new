<div class="service_area">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-10">
                <div class="section_title text-center mb-55">
                    <h3>Our Services</h3>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore</p>
                </div>
            </div>
        </div>
        <div class="row justify-content-center align-items-stretch">
            @if (Model.Services != null && Model.Services.Count > 0)
            {
                @foreach (var service in Model.Services)
                {
                    <div class="col-lg-4 col-md-6 mb-4 d-flex align-items-stretch">
                        <div class="card single_service h-100 w-100 shadow-sm">
                            <div class="service_content text-center d-flex flex-column">
                                <div class="service_thumb">
                                    <img src="img/service/1.png" alt="@service.Name" class="img-fluid">
                                </div>
                                <div class="mt-3 flex-grow-1">
                                    <h4 class="text-primary">@service.Name</h4>
                                    <p>@service.Description</p>
                                    <p><strong>Duration:</strong> @service.EstimatedDuration</p>
                                    <p><strong>Price:</strong> @string.Format("{0:N0} VNĐ", service.Price)</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>No services available.</p>
            }
        </div>
    </div>
</div>


<div class="prising_area">
