        <div class="row justify-content-center">
            @if (Model.Services != null && Model.Services.Count > 0)
            {
                @foreach (var service in Model.Services)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card shadow-sm h-100">
                            <img src="img/prising/1.png" class="card-img-top rounded-circle mx-auto d-block mt-3" alt="@service.Name" style="width: 100px; height: 100px;">
                            <div class="card-body text-center">
                                <h4 class="card-title text-primary">@service.Name</h4>
                                <p class="card-text"><strong>Estimated Duration:</strong> @service.EstimatedDuration</p>
                                <p class="card-text"><strong>Price:</strong> @service.Price</p>
                                <p class="card-text">@service.Description</p>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>No pricing information available.</p>
            }
        </div>
    </div>
</div>


