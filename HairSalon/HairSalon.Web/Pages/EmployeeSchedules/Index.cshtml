@page
@model HairSalon.Web.Pages.EmployeeSchedules.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Employee Schedule</h1>

<p>@Model.Message</p>

@if (Model.Schedules.Any())
{
    <table class="table">
        <thead>
            <a asp-page="/EmployeeSchedules/Create">Create Schedule</a>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Working Date</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Actions</th> <!-- Add Actions column -->
            </tr>
        </thead>
        <tbody>
            @foreach (var schedule in Model.Schedules)
            {
                <tr>
                    <td>@schedule.Id</td>
                    <td>@schedule.Name</td>
                    <td>@schedule.WorkingDate</td>
                    <td>@schedule.WorkingStartTime</td>
                    <td>@schedule.WorkingEndTime</td>
                    <td>
                        <a asp-page="/EmployeeSchedules/Details" asp-route-id="@schedule.Id">View Details</a>
                    </td>
                    <td>
                        <a asp-page="/EmployeeSchedules/Edit" asp-route-id="@schedule.Id">Update</a>
                    </td>
                    <td>
                        <form method="post" asp-page="/EmployeeSchedules/Delete" asp-route-id="@schedule.Id" onsubmit="return confirm('Are you sure you want to delete this schedule?');">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No schedules available.</p>
}
