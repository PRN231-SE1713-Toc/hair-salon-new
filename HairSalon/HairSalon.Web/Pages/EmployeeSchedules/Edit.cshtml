@page "{id:int}"
@model HairSalon.Web.Pages.EmployeeSchedules.EditModel

@{
    ViewData["Title"] = "Edit Schedule";
}

<h1>Edit Schedule</h1>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <p>@Model.Message</p>
}

<form method="post">
    <!-- Hidden input for EmployeeId -->
    <input type="hidden" asp-for="Schedule.EmployeeId" />

    <div class="form-group">
        <label asp-for="Schedule.WorkingDate" class="control-label"></label>
        <input asp-for="Schedule.WorkingDate" type="date" class="form-control" />
        <span asp-validation-for="Schedule.WorkingDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Schedule.WorkingStartTime" class="control-label"></label>
        <input asp-for="Schedule.WorkingStartTime" type="time" class="form-control" />
        <span asp-validation-for="Schedule.WorkingStartTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Schedule.WorkingEndTime" class="control-label"></label>
        <input asp-for="Schedule.WorkingEndTime" type="time" class="form-control" />
        <span asp-validation-for="Schedule.WorkingEndTime" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
