@page "{id:int}"
@model HairSalon.Web.Pages.EmployeeSchedules.DeleteModel

@{
    ViewData["Title"] = "Delete Schedule";
}

<h1>Delete Schedule</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Employee Schedule</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EmployeeSchedule.WorkingDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmployeeSchedule.WorkingDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EmployeeSchedule.WorkingStartTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmployeeSchedule.WorkingStartTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EmployeeSchedule.WorkingEndTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmployeeSchedule.WorkingEndTime)
        </dd>
        <dd class="col-sm-10">
