@page "{id:int}"
@model HairSalon.Web.Pages.EmployeeSchedules.DetailsModel

@{
    ViewData["Title"] = "Schedule Details";
}

<h1>Schedule Details</h1>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <p>@Model.Message</p>
}

@if (Model.Schedule != null)
{
    <table class="table">
        <tr>
            <th>ID</th>
            <td>@Model.Schedule.Id</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>@Model.Schedule.Name</td>
        </tr>
        <tr>
            <th>Working Date</th>
            <td>@Model.Schedule.WorkingDate</td>
        </tr>
        <tr>
            <th>Start Time</th>
            <td>@Model.Schedule.WorkingStartTime</td>
        </tr>
        <tr>
            <th>End Time</th>
            <td>@Model.Schedule.WorkingEndTime</td>
        </tr>
    </table>
}
else
{
    <p>No schedule details available.</p>
}