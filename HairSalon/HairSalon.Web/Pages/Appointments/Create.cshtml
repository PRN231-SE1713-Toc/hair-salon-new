@page
@model HairSalon.Web.Pages.Appointments.CreateModel
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";
}

<h1>Create</h1>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Appointment.StylistId" class="control-label">Stylist</label>
                <select asp-for="Appointment.StylistId" class ="form-control" asp-items="ViewBag.StylistId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.AppointmentDate" class="control-label"></label>
                <input asp-for="Appointment.AppointmentDate" class="form-control" type="date" />
                <span asp-validation-for="Appointment.AppointmentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.StartTime" class="control-label"></label>
                <input asp-for="Appointment.StartTime" class="form-control" type="time"/>
                <span asp-validation-for="Appointment.StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.EndTime" class="control-label"></label>
                <input asp-for="Appointment.EndTime" class="form-control" />
                <span asp-validation-for="Appointment.EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.Note" class="control-label"></label>
                <input asp-for="Appointment.Note" class="form-control" />
                <span asp-validation-for="Appointment.Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.AppointmentStatus" class="control-label"></label>
                <select asp-for="Appointment.AppointmentStatus" class="form-control"></select>
                <span asp-validation-for="Appointment.AppointmentStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
